{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@styles": ["./stitches.config"],
      "@components/*": ["components/*"],
      "@blog/*": ["blog/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "custom-types.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "blog/images.mdx"
  ],
  "exclude": ["node_modules", "pages/experiments"]
}
